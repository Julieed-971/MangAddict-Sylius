{% extends "@SyliusShop/shared/layout/base.html.twig" %}

{% block stylesheets %}
	{{ parent()}}

	{% if app.request.attributes.get('_route') starts with 'app_mangaddict' %}
		{{ encore_entry_link_tags('app-mangaddict-entry', null, 'app.mangaddict') }}
	{% endif %}

{% endblock %}

{% block content %}

	<div class="mangaddict_hero">
		<div class="mangaddict_banner">
			<h1>Bonjour MangAddict</h1>

			<div class="greetings">
				{{ greet }}
			</div>
		</div>

		{% if app.request.attributes.get('_route') starts with 'app_mangaddict' %}
			{% include 'mangaddict/dark_mode/switch.html.twig' %}
		{% endif %}
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent()}}

	{% if app.request.attributes.get('_route') starts with 'app_mangaddict' %}
		{{ encore_entry_script_tags('app-mangaddict-entry', null, 'app.mangaddict') }}
	{% endif %}
{% endblock %}


